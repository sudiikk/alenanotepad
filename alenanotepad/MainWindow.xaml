<Window x:Class="alenanotepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:alenanotepad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Open" x:Name="Open" Click="Open_Click"/>
                    <MenuItem Header="Save" x:Name="Save" Click="Save_Click"/>
                </MenuItem>
            </Menu>
            <TextBox x:Name="tb_content" Height="415"/>
        </StackPanel>
    </Grid>
</Window>
